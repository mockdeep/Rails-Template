{
  "collectCoverageFrom": ["app/javascript/**/*.ts", "!app/javascript/@types/**"],
  "coverageReporters": [["html", { "subdir": "jest" }]],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 0,
      "statements": 0
    }
  },
  "errorOnDeprecated": true,
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx"],
  "modulePaths": [
    "<rootDir>/app/javascript/",
    "<rootDir>/spec/javascript/"
  ],
  "reporters": [
    "default",
    ["jest-junit", { "outputDirectory": "/tmp/test-results", "addFileAttribute": "true" }]
  ],
  "resetMocks": true,
  "restoreMocks": true,
  "rootDir": "../",
  "setupFilesAfterEnv": ["<rootDir>/spec/javascript/test_helper.ts"],
  "testMatch": ["<rootDir>/spec/javascript/**/*_spec.ts"],
  "testEnvironmentOptions": {
    "url": "http://test.host"
  },
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.ts$": ["ts-jest", { "tsconfig": "tsconfig.json" }]
  }
}
