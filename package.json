{
  "name": "YourAppNameHere",
  "private": true,
  "engines": {
    "node": "22.17.1"
  },
  "packageManager": "yarn@4.9.2",
  "version": "0.1.0",
  "dependencies": {
    "@rails/actioncable": "^8.0.201",
    "@rails/activestorage": "^8.0.201",
    "@rails/ujs": "^7.1.502",
    "turbolinks": "^5.2.0"
